<h1>Edit <%= @figure.name %></h1>
<br><br>
<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <!-- NAME -->
  <label>Edit Name:
    <br>
    <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">
  </label>
  <br>
  <!-- TITLES -->
  <label>Add or remove titles:
    <br>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
      <%= title.name %>
      </input>
      <% end %>
  </label>
  <br><br>
  <label>Create new title:
    <input type="text" name="title[name]" id="title_name">
  </label>
  <br><br>
  <!-- LANDMARKS -->
  <label>Add or remove landmarks:
    <br>
    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
      <%= landmark.name %>
    </input>
    <% end %>
  </label>
  <br><br>
  <label>Create new landmark:
    <br>
    <input id="new_landmark" type="text" name="landmark[name]">
    <br>
  </label>
  <br><br>
  <input type="submit" value="Edit Figure">

</form>
